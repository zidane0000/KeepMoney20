<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tw.edu.niu.keepmoney20.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/main"
    android:background="@drawable/blue"
    >

    <TextView
        android:id="@+id/showDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:onClick="startDate"
        android:text="時間顯示"
        android:textSize="30sp" />

    <Button
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="startDate"
        android:text="設定時間" />

    <Button
        android:id="@+id/VoiceEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/startDate"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/startDate"
        android:text="inputvoice" />

    <Button
        android:id="@+id/ManuallyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="MANUALLYENTER" />

    <ListView
        android:id="@+id/content_main_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/enter"
        android:layout_below="@+id/startDate"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />


</RelativeLayout>
